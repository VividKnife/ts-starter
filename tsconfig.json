{
    "compilerOptions": {
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "./build/",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "strictFunctionTypes": false,
      "strictPropertyInitialization": true,
      "strictNullChecks": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "lib": [
          "es6"
      ],
      "target": "es2015",
      "allowJs": true
    },
    "exclude": [
        "build",
        "node_modules"
    ],
    "include": [
        "./src/**/*"        
    ]
}